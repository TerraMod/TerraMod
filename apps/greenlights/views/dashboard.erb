<div style="text-align: center;" class="panel panel-default">

	<div class="panel-heading">
		<h2>Greenlights</h2>
	</div>

	<div style="text-align: left;" class="panel-body">
		<div role="tabpanel">
			<ul class="nav nav-tabs" role="tablist">
				<li role="presentation" class="active"><a href="#rules" aria-controls="rules" role="tab" data-toggle="tab">Rules</a></li>
				<li role="presentation"><a href="#profiles" aria-controls="profiles" role="tab" data-toggle="tab">Profiles</a></li>
				<li role="presentation"><a href="#groups" aria-controls="groups" role="tab" data-toggle="tab">Groups</a></li>
			</ul>
			
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane fade in active" id="rules">
					<table style="width:100%">
						<tr>
							<th>Sensor</th>
							<th>Start</th>
							<th>End</th>
							<th>Minutes</th>
							<th>Color</th>
							<th>Lights</th>
						</tr>
												
						<tr>
							<td>Door sensor</td>
							<td>6:00am</td>
							<td>10:00am</td>
							<td>10</td>
							<td>White</td>
							<td>Office</td>
							<td>
								<label class="btn btn-default btn-xsmall btn-danger" for="appfile">
									<span class="glyphicon glyphicon-minus" aria-hidden="true" />
								</label>
							</td>
						</tr>
						
						<tr>
							<td>
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Sensor">
								</div>
							</td>
							<td>
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Start">
								</div>
							</td>
							<td>
								<div class="input-group">
									<input type="text" class="form-control" placeholder="End">
								</div>
							</td>
							<td>
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Minutes">
								</div>
							</td>
							<td>
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Color">
								</div>
							</td>
							<td>
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Lights">
								</div>
							</td>
						
							<td>
								<label class="btn btn-default btn-small btn-success" for="appfile">
									<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Add
								</label>
							</td>
						</tr>
					</table>
				</div>
				
				
				
				
				
				<div role="tabpanel" class="tab-pane fade" id="profiles">
					<div style="overflow: hidden;">
						<div style="float:left; width:33%;">
							<h2>Profiles</h2>
							<select multiple class="form-control">
								<option>Default</option>
								<option>Away</option>
							</select>
							<label class="btn btn-default btn-small btn-success">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> New Profile
							</label>
						</div>
						
						<div style="float:left; width:32%; padding:1%">
							<h2>Current Profile</h2>
							
							<select multiple class="form-control">
								<option>Bedroom, red, 2 minutes, bedroom-motion</option>
							</select>
							
							<label class="btn btn-default btn-small btn-success" style="float:left;">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Save profile
							</label>
							
							<label class="btn btn-default btn-small btn-danger" style="float:left;">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Remove selected rules
							</label>
						</div>
						
						<div style="float:left; width:33%; padding: 1%">
							<h2>Rules</h2>
							<select multiple class="form-control">
								<option>Kitchen, yellow, 10 minutes, kitchen-motion</option>
								<option>Bedroom, red, 2 minutes, bedroom-motion</option>
							</select>
							
							<label class="btn btn-default btn-small btn-success" style="float:left;">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Add to profile
							</label>
							
							<label class="btn btn-default btn-small btn-danger" style="float:left;">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Remove from profile
							</label>
						</div>
					</div>
				</div>
				
				
				
				
				
				<div role="tabpanel" class="tab-pane fade" id="groups">
					<div style="overflow: hidden;">
						<div style="float:left; width:33%;">
							<h2>Groups</h2>
							<select multiple class="form-control">
								<option>Bedroom</option>
								<option>Kitchen</option>
							</select>
							<label class="btn btn-default btn-small btn-success">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> New Group
							</label>
							<label class="btn btn-default btn-small btn-danger">
								<span class="glyphicon glyphicon-minus" aria-hidden="true" /> Remove Group
							</label>
						</div>
						
						<div style="float:left; width:32%; padding:1%">
							<h2>Current Group's Lights</h2>
							
							<select multiple class="form-control">
								<option>1</option>
								<option>2</option>
							</select>
							
							<label class="btn btn-default btn-small btn-success" style="float:left;">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Save group
							</label>
							
							<label class="btn btn-default btn-small btn-danger" style="float:left;">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Remove selected lights
							</label>
						</div>
						
						<div style="float:left; width:33%; padding: 1%">
							<h2>Lights</h2>
							<select multiple class="form-control">
								<option>1</option>
								<option>2</option>
							</select>
							
							<label class="btn btn-default btn-small btn-success" style="float:left;">
								<span class="glyphicon glyphicon-plus" aria-hidden="true" /> Add to group
							</label>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

