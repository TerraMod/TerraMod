<div style="text-align: center;" class="panel panel-default">

	<div class="panel-heading">
		<h2>Configure App</h2>
	</div>

	<div style="text-align: left;" class="panel-body">

		<p>
			<div class="panel panel-default">

                        	<div class="panel-heading">
                                	<h3 class="panel-title">About App</h3>
                		</div>

               			<div class="panel-body" style="text-align: left;">
                        		<%
						name = app[0]
						version = app[1]
						page = app[2]
						description = app[3]
						object = app[4]
					%>
					<b>Name: </b><%= name %><br />
					<b>Version: </b><%= version %><br />
					<b>Description: </b><%= description %><br /><br />
					<a href="<%= page %>"><button type="button" class="btn btn-default btn-primary">View Page</button></a>
					<a href=""><button type="button" class="btn btn-default btn-primary">Download</button></a>
					<a href="/uninstall_app/<%= object %>"><button type="button" class="btn btn-default btn-danger">Uninstall</button></a>
                		</div>
			</div>
		</p>

		<p>
	
			<div class="panel panel-default">

				<div class="panel-heading">
					<h3 class="panel-title">Edit Options</h3>
				</div>

				<div class="panel-body">
					<%= requirements %>
				</div>
			</div>
		</p>

	</div>
</div>
